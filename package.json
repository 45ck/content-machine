{
  "name": "content-machine",
  "version": "0.1.0",
  "description": "Automated short-form video generation pipeline for TikTok, Reels, and Shorts",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "cli": "tsx src/cli.ts",
    "pipeline:daily": "tsx src/cli.ts daily",
    "pipeline:weekly": "tsx src/cli.ts weekly",
    "render:preview": "remotion preview src/remotion/index.ts",
    "render:build": "remotion render src/remotion/index.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@remotion/cli": "^4.0.0",
    "@remotion/player": "^4.0.0",
    "archiver": "^7.0.0",
    "bullmq": "^5.0.0",
    "commander": "^12.0.0",
    "openai": "^4.77.0",
    "playwright": "^1.40.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "^4.0.0",
    "uuid": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/45ck/content-machine.git"
  },
  "keywords": [
    "video-generation",
    "short-form",
    "tiktok",
    "reels",
    "shorts",
    "remotion",
    "automation",
    "content-creation"
  ]
}
