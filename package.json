{
  "name": "content-machine",
  "version": "0.1.0",
  "description": "CLI-first automated short-form video generator for TikTok, Reels, and Shorts",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cm": "./dist/cli/index.cjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "esbuild src/cli/index.ts --bundle --platform=node --format=cjs --outfile=dist/cli/index.cjs --external:@remotion/* --external:remotion --external:react --external:react-dom --external:pino --external:pino-pretty --external:kokoro-js",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "tsx watch src/cli/index.ts",
    "cm": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "tsc --noEmit",
    "dup:check": "jscpd --config .jscpd.json --exitCode 1",
    "quality": "npm run typecheck && npm run lint && npm run format:check && npm run test:coverage && npm run dup:check",
    "size": "size-limit",
    "size:check": "size-limit --json",
    "eval": "npx promptfoo eval",
    "eval:script": "npx promptfoo eval -c evals/configs/cm-script.yaml",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@remotion/bundler": "^4.0.0",
    "@remotion/cli": "^4.0.0",
    "@remotion/install-whisper-cpp": "^4.0.399",
    "@remotion/player": "^4.0.0",
    "@remotion/renderer": "^4.0.0",
    "@tavily/core": "^0.6.4",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "inquirer": "^10.0.0",
    "kokoro-js": "^1.2.1",
    "mustache": "^4.2.0",
    "openai": "^4.77.0",
    "ora": "^8.0.0",
    "pexels": "^1.4.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "^4.0.0",
    "yaml": "^2.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@size-limit/file": "^12.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/mustache": "^4.2.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^2.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.7",
    "msw": "^2.0.0",
    "prettier": "^3.7.4",
    "promptfoo": "^0.90.0",
    "size-limit": "^12.0.0",
    "tsx": "^4.19.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/45ck/content-machine.git"
  },
  "keywords": [
    "video-generation",
    "short-form",
    "tiktok",
    "reels",
    "shorts",
    "remotion",
    "automation",
    "content-creation",
    "cli"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/cli/index.cjs",
      "limit": "5 MB"
    }
  ]
}
